 * Licensed under GNU Affero General Public License v3.0 or later
 */

use Ktomk\Pipelines\Utility\App;

defined('STDERR') || define('STDERR', fopen('php://stderr', 'wb'));

if (PHP_SAPI !== 'cli') fprintf(
        STDERR,
    'warn: pipelines should be invoked via the CLI version of PHP, ' .
    "not the '%s' SAPI\n",
    PHP_SAPI
);

error_reporting(-1);
if (function_exists('init_set')) {
    ini_set('display_errors', '1');
}

require __DIR__ . '/../src/bootstrap.php';

@include(__DIR__ . '/dev/xdebug.php'); // only in source version, not in phar

exit(App::create()->main($argv));
